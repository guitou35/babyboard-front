{% extends 'base.html.twig' %}

{% block title %}Page de gestion{% endblock %}

{% block body %}
    <main class="container bodyContainer" id="bodyContent">
        <h1 class="text-3xl font-bold text-center pt-2">Gestion</h1>
        {% include 'components/_alerts.html.twig' %}
        <div class="flex justify-center flex-row m-2 flex-wrap text-center">
        {% for gestion in gestions %}
        <a href="{{path(gestion.route)}}" class="block max-w-sm m-2 p-6 bg-white border border-gray-200 rounded-lg shadow hover:drop-shadow-xl hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
            <i class="{{ gestion.icon }}"></i>
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ gestion.name }}</h5>
            <p class="font-normal text-gray-700 dark:text-gray-400">{{ gestion.description }}</p>
        </a>
        {% endfor%}
    </div>
        </div>
    </main>
{% endblock %}


