{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
<div class="flex">
    <div>
        <img src="{{ asset('images/background.jpg') }}" alt="login babyboard" class="h-screen hidden lg:block">
    </div>
<div class="m-auto lg:px-6 p-6">
    <h1 class="text-3xl font-bold text-center mb-6">Connexion</h1>
    <p class="text-center mb-6">Connectez-vous Ã  votre compte <b>Babyboard</b></p>

<form method="post">
    {% include 'components/_alerts.html.twig' %}
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
        <div class="mb-12">
          <label for="email" class="loginFormLabel loginFormLabel_dark">Your email</label>
          <input type="email" id="email" name="email" class="loginFormInput loginFormInput_dark" placeholder="name@gmail.com" value="{{ last_username }}" required />
        </div>
        <div class="mb-6">
          <label for="password" class="loginFormLabel loginFormLabel_dark">Your password</label>
          <input type="password" id="password" name="password" class="loginFormInput loginFormInput_dark" required />
        </div>
        <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}">
        <div class="text-center">
        <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Connexion</button>
            <a href="{{ path('app_register') }}" class="hover:cursor-pointer text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Inscription</a>
        </div>
      </form>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}
