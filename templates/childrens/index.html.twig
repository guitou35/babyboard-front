{% extends 'base.html.twig' %}

{% block title %}Page childrens{% endblock %}

{% block body %}
    <main class="container bodyContainer" id="bodyContent">
        <h1 class="text-3xl font-bold text-center pt-2">Les enfants</h1>
        {% include 'components/_alerts.html.twig' %}
        {% if childrens %}
        <div class="flex justify-center flex-row m-2 flex-wrap">
        {% for children in childrens %}
            {% include 'components/_card.html.twig' with {children: children}%}
        {% endfor %}
        </div>
    <div class="text-center py-2.5">
        {% else %}
                <h2 class="text-3xl">Aucun enfant</h2> 
        {% endif %}
        <a href="{{ path('new_childrens') }}" class="focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-2 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900">Ajouter un enfant</a>
    </div>
    </main>
{% endblock %}


